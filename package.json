{
  "name": "punkweb-ngx",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "ng serve",
    "electron": "electron electron/ --debug",
    "dist:win": "electron-builder -w --x64 --ia32",
    "dist:mac": "electron-builder -m --x64 --ia32",
    "dist:linux": "electron-builder -l --x64 --ia32",
    "build": "ng build",
    "prod": "ng build --prod",
    "lint": "ng lint",
    "test": "ng test",
    "e2e": "ng e2e",
    "test:ci": "ng test --single-run=true --browsers PhantomJS --watch=false"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.9",
    "@angular/common": "^6.0.9",
    "@angular/compiler": "^6.0.9",
    "@angular/core": "^6.0.9",
    "@angular/forms": "^6.0.9",
    "@angular/http": "^6.0.9",
    "@angular/platform-browser": "^6.0.9",
    "@angular/platform-browser-dynamic": "^6.0.9",
    "@angular/router": "^6.0.9",
    "chart.js": "^2.8.0",
    "codemirror": "^5.31.0",
    "core-js": "^2.4.1",
    "intl": "^1.2.5",
    "moment": "^2.22.1",
    "rxjs": "6.2.2",
    "rxjs-compat": "^6.0.0-rc.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular-devkit/core": "^0.6.0",
    "@angular/cli": "^6.0.8",
    "@angular/compiler-cli": "^6.0.9",
    "@angular/language-service": "^6.0.9",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "electron": "^1.7.9",
    "electron-builder": "^19.48.2",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.4",
    "phantomjs-prebuilt": "^2.1.15",
    "protractor": "^5.3.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.7.2"
  },
  "build": {
    "appId": "com.punkweb.music",
    "directories": {
      "app": "electron/",
      "buildResources": "electron/",
      "output": "electronDist/"
    },
    "mac": {
      "category": "public.app-category.music"
    },
    "nsis": {
      "oneClick": false,
      "deleteAppDataOnUninstall": true
    }
  }
}
